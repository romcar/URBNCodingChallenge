{
    "extends": [
        "airbnb"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "codeFrame": false,
        "ecmaFeatures": {
            "globalReturn": true,
            "impliedStrict": true,
            "jest": true,
            "jsx": true,
            "arrowFunction": true
        }
    },
    "plugins": [
        "react",
        "jest"
    ],
    "env": {
        "es6": true,
        "browser": true,
        "jest/globals": true
    },
    "rules": {
        "react/jsx-filename-extension": [
            2,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "import/no-extraneous-dependencies": 0,
        "react/no-unescaped-entities": 0,
        "react/jsx-indent": [
            0
        ],
        "class-methods-use-this": 0
    }
}